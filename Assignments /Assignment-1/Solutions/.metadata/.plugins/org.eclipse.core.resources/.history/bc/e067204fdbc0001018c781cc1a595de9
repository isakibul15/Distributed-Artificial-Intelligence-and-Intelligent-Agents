/**
* Name: Festival Simulation - Challenge 1: Memory System
* Author: Based on Assignment 1 Requirements
* Description: A festival simulation with guests that have memory (brain) and without
*/

model FestivalSimulation

global {
    int nb_guests <- 20;
    int nb_food_stores <- 2;
    int nb_water_stores <- 2;
    int nb_guests_with_brain <- 10; // Half with brain, half without
    float memory_use_probability <- 0.7; // 70% chance to use memory when available
    
    geometry shape <- square(100);
    
    // Global tracking for comparison
    list<float> avg_distance_with_brain <- [];
    list<float> avg_distance_without_brain <- [];
    
    init {
        // Create the information center at the center of the world
        create InformationCenter number: 1 {
            location <- {50, 50};
        }
        
        // Create food stores at fixed locations on the left side
        create Store number: nb_food_stores {
            store_type <- "FOOD";
            color <- #orange;
            float spacing <- nb_food_stores > 1 ? 60 / (nb_food_stores - 1) : 0;
            location <- {20, 20 + (index * spacing)};
        }
        
        // Create water stores at fixed locations on the right side
        create Store number: nb_water_stores {
            store_type <- "WATER";
            color <- #blue;
            float spacing <- nb_water_stores > 1 ? 60 / (nb_water_stores - 1) : 0;
            location <- {80, 20 + (index * spacing)};
        }
        
        // Create guests WITH BRAIN (memory)
        create Guest number: nb_guests_with_brain {
            location <- {rnd(10.0, 90.0), rnd(10.0, 90.0)};
            has_brain <- true;
            color <- #green; // Green = has brain
        }
        
        // Create guests WITHOUT BRAIN (no memory)
        create Guest number: (nb_guests - nb_guests_with_brain) {
            location <- {rnd(10.0, 90.0), rnd(10.0, 90.0)};
            has_brain <- false;
            color <- #darkgreen; // Dark green = no brain
        }
    }
    
    // Update tracking data every cycle
    reflex update_tracking {
        list<Guest> guests_with_brain <- Guest where (each.has_brain = true);
        list<Guest> guests_without_brain <- Guest where (each.has_brain = false);
        
        if (!empty(guests_with_brain)) {
            add mean(guests_with_brain collect each.total_distance_traveled) to: avg_distance_with_brain;
        }
        
        if (!empty(guests_without_brain)) {
            add mean(guests_without_brain collect each.total_distance_traveled) to: avg_distance_without_brain;
        }
    }
}

species InformationCenter {
    rgb color <- #red;
    float size <- 3.0;
    
    // Find nearest store of a specific type
    Store find_nearest_store(string need_type) {
        list<Store> available_stores <- Store where (each.store_type = need_type);
        if (empty(available_stores)) {
            return nil;
        }
        return available_stores closest_to self;
    }
    
    aspect default {
        draw square(size) color: color border: #black;
    }
}

species Store {
    string store_type; // "FOOD" or "WATER"
    rgb color;
    float size <- 4.0;
    
    aspect default {
        draw triangle(size) color: color border: #black;
    }
}

species Guest skills: [moving] {
    float hunger <- rnd(50.0, 100.0);
    float thirst <- rnd(50.0, 100.0);
    float hunger_decrease_rate <- rnd(0.1, 0.3);
    float thirst_decrease_rate <- rnd(0.1, 0.3);
    float speed <- 2.0;
    
    rgb color <- #green;
    float size <- 1.5;
    
    point target_location <- nil;
    Store target_store <- nil;
    InformationCenter info_center <- nil;
    
    string state <- "idle"; // States: idle, seeking_info, going_to_store, at_store
    string current_need <- nil; // "FOOD" or "WATER"
    string guest_name;
    
    // CHALLENGE 1: Brain/Memory System
    bool has_brain <- false; // Does this guest have memory capability?
    map<string, Store> memory_stores; // Brain memory: "FOOD" -> Store, "WATER" -> Store
    float total_distance_traveled <- 0.0;
    int memory_uses <- 0; // Times used memory
    int info_center_visits <- 0; // Times visited info center
    
    init {
        info_center <- first(InformationCenter);
        memory_stores <- map([]);
        guest_name <- "Guest_" + string(index) + (has_brain ? "ðŸ§ " : "âŒ");
        
        if (has_brain) {
            write guest_name + " created WITH BRAIN at " + location + " [Hunger: " + hunger + ", Thirst: " + thirst + "]";
        } else {
            write guest_name + " created WITHOUT BRAIN at " + location + " [Hunger: " + hunger + ", Thirst: " + thirst + "]";
        }
    }
    
    reflex decrease_attributes when: state = "idle" {
        hunger <- hunger - hunger_decrease_rate;
        thirst <- thirst - thirst_decrease_rate;
        
        // Random wandering while idle - keep within bounds
        if (target_location = nil or location distance_to target_location < 1) {
            target_location <- {rnd(10.0, 90.0), rnd(10.0, 90.0)};
        }
        
        point old_location <- location;
        do goto target: target_location speed: speed * 0.5;
        total_distance_traveled <- total_distance_traveled + (location distance_to old_location);
        
        // Keep agent within bounds
        location <- {max(5, min(95, location.x)), max(5, min(95, location.y))};
    }
    
    reflex check_needs when: state = "idle" {
        if (hunger <= 20.0) {
            current_need <- "FOOD";
            
            // GUESTS WITH BRAIN: Check memory first
            if (has_brain and memory_stores contains_key current_need) {
                float random_choice <- rnd(1.0);
                
                if (random_choice < memory_use_probability) {
                    // Use brain memory - go directly to store
                    target_store <- memory_stores[current_need];
                    target_location <- target_store.location;
                    state <- "going_to_store";
                    memory_uses <- memory_uses + 1;
                    write "ðŸ§ ðŸ’š " + guest_name + " is HUNGRY! Using BRAIN MEMORY - Going directly to remembered FOOD store";
                } else {
                    // Choose to discover new place
                    state <- "seeking_info";
                    target_location <- info_center.location;
                    info_center_visits <- info_center_visits + 1;
                    write "ðŸ”ðŸ’š " + guest_name + " is HUNGRY! Wants to DISCOVER - Going to Info Center";
                }
            } else {
                // No brain OR no memory yet - must use info center
                state <- "seeking_info";
                target_location <- info_center.location;
                info_center_visits <- info_center_visits + 1;
                if (has_brain) {
                    write "ðŸ”ðŸ’š " + guest_name + " is HUNGRY! (No memory yet) - Going to Info Center";
                } else {
                    write "ðŸ”âš« " + guest_name + " is HUNGRY! (NO BRAIN) - Must go to Info Center";
                }
            }
        } else if (thirst <= 20.0) {
            current_need <- "WATER";
            
            // GUESTS WITH BRAIN: Check memory first
            if (has_brain and memory_stores contains_key current_need) {
                float random_choice <- rnd(1.0);
                
                if (random_choice < memory_use_probability) {
                    // Use brain memory - go directly to store
                    target_store <- memory_stores[current_need];
                    target_location <- target_store.location;
                    state <- "going_to_store";
                    memory_uses <- memory_uses + 1;
                    write "ðŸ§ ðŸ’™ " + guest_name + " is THIRSTY! Using BRAIN MEMORY - Going directly to remembered WATER store";
                } else {
                    // Choose to discover new place
                    state <- "seeking_info";
                    target_location <- info_center.location;
                    info_center_visits <- info_center_visits + 1;
                    write "ðŸ”ðŸ’™ " + guest_name + " is THIRSTY! Wants to DISCOVER - Going to Info Center";
                }
            } else {
                // No brain OR no memory yet - must use info center
                state <- "seeking_info";
                target_location <- info_center.location;
                info_center_visits <- info_center_visits + 1;
                if (has_brain) {
                    write "ðŸ’§ðŸ’š " + guest_name + " is THIRSTY! (No memory yet) - Going to Info Center";
                } else {
                    write "ðŸ’§âš« " + guest_name + " is THIRSTY! (NO BRAIN) - Must go to Info Center";
                }
            }
        }
    }
    
    reflex go_to_info_center when: state = "seeking_info" {
        point old_location <- location;
        do goto target: target_location speed: speed;
        total_distance_traveled <- total_distance_traveled + (location distance_to old_location);
        
        if (location distance_to target_location < 2) {
            write "â„¹ï¸  " + guest_name + " arrived at Information Center - Asking for " + current_need + " store";
            
            // Ask information center for nearest store
            ask info_center {
                myself.target_store <- self.find_nearest_store(myself.current_need);
            }
            
            if (target_store != nil) {
                target_location <- target_store.location;
                state <- "going_to_store";
                write "ðŸ“ " + guest_name + " received directions to " + target_store.store_type + " store";
            } else {
                // No store available, go back to idle
                state <- "idle";
                current_need <- nil;
                target_location <- nil;
                write "âŒ " + guest_name + " - No store available!";
            }
        }
    }
    
    reflex go_to_store when: state = "going_to_store" {
        point old_location <- location;
        do goto target: target_location speed: speed;
        total_distance_traveled <- total_distance_traveled + (location distance_to old_location);
        
        if (location distance_to target_location < 2) {
            state <- "at_store";
            write "ðŸª " + guest_name + " arrived at " + target_store.store_type + " store";
        }
    }
    
    reflex replenish_at_store when: state = "at_store" {
        // Guests WITH BRAIN save to memory
        if (has_brain) {
            memory_stores[current_need] <- target_store;
            write "ðŸ’¾ðŸ§  " + guest_name + " SAVED " + current_need + " store to BRAIN MEMORY!";
        }
        
        if (current_need = "FOOD") {
            hunger <- 100.0;
            write "âœ… " + guest_name + " replenished HUNGER [Distance: " + total_distance_traveled + "]";
        } else if (current_need = "WATER") {
            thirst <- 100.0;
            write "âœ… " + guest_name + " replenished THIRST [Distance: " + total_distance_traveled + "]";
        }
        
        // Reset state and go back to idle
        state <- "idle";
        current_need <- nil;
        target_store <- nil;
        target_location <- nil;
    }
    
    aspect default {
        rgb display_color <- has_brain ? #green : #darkgreen;
        
        // Change color based on state
        if (state = "seeking_info") {
            display_color <- #yellow;
        } else if (state = "going_to_store") {
            display_color <- has_brain ? #purple : #violet;
        } else if (state = "at_store") {
            display_color <- #white;
        }
        
        draw circle(size) color: display_color border: #black;
        
        // Draw brain indicator for guests with brain
        if (has_brain) {
            draw circle(size * 0.5) at: location + {0, size * 1.5} color: #pink border: #black;
        }
    }
}

experiment FestivalSimulation type: gui {
    parameter "Number of Guests (Total)" var: nb_guests min: 10 max: 50;
    parameter "Guests WITH Brain" var: nb_guests_with_brain min: 0 max: 50;
    parameter "Number of Food Stores" var: nb_food_stores min: 1 max: 10;
    parameter "Number of Water Stores" var: nb_water_stores min: 1 max: 10;
    parameter "Memory Use Probability" var: memory_use_probability <- 0.7 min: 0.0 max: 1.0;
    
    output {
        display main_display {
            graphics "background" {
                draw shape color: #lightgray;
            }
            
            species InformationCenter;
            species Store;
            species Guest;
            
            graphics "legend" {
                draw "ðŸ§  WITH BRAIN (Green + Pink dot)" at: {5, 5} color: #black font: font("Arial", 12, #bold);
                draw "âŒ NO BRAIN (Dark Green)" at: {5, 8} color: #black font: font("Arial", 12, #bold);
            }
        }
        
        // CHALLENGE 1: Distance Comparison Graph
        display "Distance Comparison Over Time" {
            chart "Average Distance: With Brain vs Without Brain" type: series {
                data "WITH BRAIN ðŸ§ " value: length(avg_distance_with_brain) > 0 ? last(avg_distance_with_brain) : 0.0 color: #green marker: false;
                data "WITHOUT BRAIN âŒ" value: length(avg_distance_without_brain) > 0 ? last(avg_distance_without_brain) : 0.0 color: #darkgreen marker: false;
            }
        }
        
        monitor "=== GUEST TYPES ===" value: "";
        monitor "Guests WITH Brain ðŸ§ " value: length(Guest where (each.has_brain = true));
        monitor "Guests WITHOUT Brain âŒ" value: length(Guest where (each.has_brain = false));
        
        monitor "=== BASIC STATS ===" value: "";
        monitor "Number of Guests" value: length(Guest);
        monitor "Guests Seeking Help" value: length(Guest where (each.state = "seeking_info"));
        monitor "Guests at Stores" value: length(Guest where (each.state = "at_store"));
        
        monitor "=== DISTANCE COMPARISON ===" value: "";
        monitor "Avg Distance WITH Brain" value: length(Guest where (each.has_brain = true)) > 0 ? mean((Guest where (each.has_brain = true)) collect each.total_distance_traveled) : 0;
        monitor "Avg Distance WITHOUT Brain" value: length(Guest where (each.has_brain = false)) > 0 ? mean((Guest where (each.has_brain = false)) collect each.total_distance_traveled) : 0;
        monitor "Distance Savings %" value: length(Guest where (each.has_brain = false)) > 0 ? 
            (mean((Guest where (each.has_brain = false)) collect each.total_distance_traveled) - mean((Guest where (each.has_brain = true)) collect each.total_distance_traveled)) / 
            mean((Guest where (each.has_brain = false)) collect each.total_distance_traveled) * 100 : 0;
        
        monitor "=== MEMORY USAGE ===" value: "";
        monitor "Total Memory Uses" value: sum((Guest where (each.has_brain = true)) collect each.memory_uses);
        monitor "Total Info Center Visits" value: sum(Guest collect each.info_center_visits);
        monitor "Brain: Food Memory" value: length(Guest where (each.has_brain = true and each.memory_stores contains_key "FOOD"));
        monitor "Brain: Water Memory" value: length(Guest where (each.has_brain = true and each.memory_stores contains_key "WATER"));
    }
}